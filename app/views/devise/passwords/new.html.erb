<section class="vh-100" style="background-color: #508bfc;">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-8 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 5rem;">
            <div class="card-body p-9 text-center">
             <h3 class="mb-5">Forgot Your Password?</h3>

              <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-3 col-form-label"> Email</label>
                <div class="col-sm-12">
                  <%= f.text_field :email,:required => true, class: "form-control", placeholder:"Enter Name", style:"border-radius: 5rem;" %>
                </div>
              </div>
              <button class="btn btn-primary btn-lg btn-block" type="submit", style="border-radius: 5rem;">Send me reset password instructions</button>

              <hr class="my-4">

               <%#= f.submit "Sign up", class:"btn btn-lg btn-block btn-primary", style:"border-radius: 5rem;"%>
               <%= render "devise/shared/links" %>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
