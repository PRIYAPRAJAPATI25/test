<center><div class="card" style="width: 40rem;">
  <div class="card-header">
   <h3>Create Product</h3>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
    <%= form_with model: @product, class: "form-horizontal" do |form| %>
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <%= form.text_field :product_name,:required => true, class: "form-control", placeholder:"Enter Product Name" %>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Owner Name</label>
    <div class="col-sm-10">
     <%= form.select "user_id", options_from_collection_for_select(User.owner, :id, :name), { :prompt => 'Selected Owner'}, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Country</label>
    <div class="col-sm-10">
      <%= form.collection_select "country_id", Country.order(:name),:id,:name, {:prompt =>'select country origin '}, class:"form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Product Type</label>
    <div class="col-sm-10">
      <%= form.collection_select "product_type_id", ProductType.order(:name),:id,:name, {:prompt =>'select poduct type'}, class:"form-control" %>
    </div>
  </div>
   <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label"> Price</label>
    <div class="col-sm-10">
     <%= form.text_field :product_price, :required => true,class: "form-control", placeholder:"Enter Price" %>
    </div>
  </div><br><br>

  <button type="submit" class="btn btn-primary">Create</button>
</form>
</li>
<% end %>
   
  </ul>
</div></center>