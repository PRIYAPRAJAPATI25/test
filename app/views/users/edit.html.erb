<%= form_with model: @user, class: "form-horizontal" do |form| %>
 <b><div class="form-group">
    <label class="control-label col-sm-2" for="email">Name:</label>
    <div class="col-sm-6">
      <%= form.text_field :name, class: "form-control", placeholder:"Enter Name" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Role:</label>
    <div class="col-sm-10">
      <%= form.select :role, User.roles.keys.map {|key| [t("user.#{key}"), key]} %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Mobile</label>
    <div class="col-sm-6">
      <%= form.text_field :mobile, class: "form-control", placeholder:"Enter Mobile" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-6">
      <%= form.text_field :email, class: "form-control", placeholder:"Enter email" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label><input type="checkbox"> Remember me</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-danger">Submit</button>
    </div>
  </div></b>
<% end %>