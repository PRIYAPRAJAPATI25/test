<center><div class="card" style="width: 40rem;">
  <div class="card-header">
   <h3>Create User</h3>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
   <%= form_with model: @user, class: "form-horizontal" do |form| %>
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label"> Name</label>
    <div class="col-sm-10">
      <%= form.text_field :name,:required => true, class: "form-control", placeholder:"Enter Name" %>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Role</label>
    <div class="col-sm-10">
  
   <%= form.select "user_id", User.roles.keys.map {|key| [t("user.#{key}"), key]}, { :prompt => 'Select option'}, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Mobile</label>
    <div class="col-sm-10">
     <%= form.text_field :mobile, class: "form-control", placeholder:"Enter Mobile" %>
    </div>
  </div>
   <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label"> Email</label>
    <div class="col-sm-10">
    <%= form.text_field :email, class: "form-control", placeholder:"Enter email" %>
    </div>
  </div><br><br>

  <button type="submit" class="btn btn-primary">Create</button>
</form>
</li>
<% end %>
   
  </ul>
</div></center>